<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alphapyxidis.apyx" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>aPyx</name>
    <description>
        Ma 1Ã¨re application Phonegap
    </description>
    <author email="vincent.vermorel@gmail.com" href="http://alpha-pyxidis.com">
        alphapyxidis
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <icon src="res/icon/android/icon-36-ldpi.png" qualifier="ldpi" width="36" height="36" />
        <icon src="res/icon/android/icon-48-mdpi.png" qualifier="mdpi" width="48" height="48"/>
        <icon src="res/icon/android/icon-72-hdpi.png" qualifier="hdpi" width="72" height="72"/>
        <icon src="res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi" width="96" height="96"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <platform name="windows" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-build-tool" value="gradle" />    
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <plugin name="cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-camera"  />
    <plugin name="cordova-plugin-device"  />
    <plugin name="cordova-plugin-device-motion"  />
    <plugin name="cordova-plugin-device-orientation"  />
    
</widget>
