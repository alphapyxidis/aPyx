<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alphapyxidis.apyx" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android = "http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>aPyx</name>
    <description>
        Boîte à outils pour la randonnée : boussole, GPS, photos géolocalisée... 
    </description>
    <author email="vincent.vermorel@gmail.com" href="http://alpha-pyxidis.com">
        alphapyxidis
    </author>
    <content src="index.html" />
    <access origin="http://alpha-pyxidis.com" subdomains="true" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-build-tool" value="ant" /> 
        <allow-intent href="market:*" />
        <icon src="res/icon/android/icon-36-ldpi.png" qualifier="ldpi" width="36" height="36" />
        <icon src="res/icon/android/icon-48-mdpi.png" qualifier="mdpi" width="48" height="48"/>
        <icon src="res/icon/android/icon-72-hdpi.png" qualifier="hdpi" width="72" height="72"/>
        <icon src="res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi" width="96" height="96"/>
    </platform>
    <platform name="webos">
        <icon src="res/icon/webos/icon-64.png" width="64" height="64" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <icon src="res/icon/ios/icon-57.png" width="57" height="57" />
        <icon src="res/icon/ios/icon-57-2x.png" width="114" height="114"/>
        <icon src="res/icon/ios/icon-72.png" width="72" height="72"/>
        <icon src="res/icon/ios/icon-72-2x.png" width="144" height="144"/>
    </platform>
    <platform name="winphone">
        <icon src="res/icon/windows-phone/icon-48.png" width="48" height="48"/>
        <icon src="res/icon/windows-phone/icon-62-tile.png" width="62" height="62" role="background"/>
        <icon src="res/icon/windows-phone/icon-173-tile.png" width="173" height="173"/>
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <plugin name="cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-camera"  />
    <plugin name="cordova-plugin-device"  />
    <plugin name="cordova-plugin-device-motion"  />
    <plugin name="cordova-plugin-device-orientation"  />
    
</widget>
