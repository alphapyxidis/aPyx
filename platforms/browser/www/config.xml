<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alphapyxidis.apyx" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="BarcodeScanner">
        <param name="browser-package" value="BarcodeScanner" />
    </feature>
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>αPyx</name>
    <description>
        Boîte à outils pour la randonnée : boussole, GPS, photos géolocalisée... 
    </description>
    <author email="vincent.vermorel@gmail.com" href="http://alpha-pyxidis.com">
        alphapyxidis
    </author>
    <content src="index.html" />
    <access origin="http://alpha-pyxidis.com" subdomains="true" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
